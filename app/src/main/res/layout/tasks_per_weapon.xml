<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bogdanbm.finalweapontool.TasksPerWeapon">


    <TextView
        android:id="@+id/textViewTasksForWeaponType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNoOfTasks"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewNoOfTasks"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linearLayoutTasks"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textViewNoOfTasks"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <ListView
            android:id="@+id/tasksListView"
            android:layout_width="338dp"
            android:layout_height="418dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNoOfTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCreateNewTask"
        android:layout_alignLeft="@+id/linearLayoutTasks"
        android:layout_alignStart="@+id/linearLayoutTasks"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonCreateNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textViewTasksForWeaponType"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="#104aa8"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="New Task"
        android:textColor="#ffffff"
        android:textSize="10sp" />

</RelativeLayout>